# MongoDB Configuration
connection_string=<your-mongo-key-here>

# Discord Bot Configuration
DISCORD_TOKEN=<your-discord-bot-token-here>

# API Port Configuration
# External port (what you access from your host machine)
API_EXTERNAL_PORT=8008
# Internal port (what the API service uses inside Docker)
API_INTERNAL_PORT=8000

# API Host Configuration (for Discord bot)
# This should be the Docker service name when running in Docker
API_HOST=uvic-hackathon-api
# Or use localhost when running locally
# API_HOST=localhost
